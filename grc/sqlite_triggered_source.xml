<?xml version="1.0"?>
<block>
  <name>SQLite Triggered Source</name>
  <key>sqlite_triggered_source</key>
  <category>[SQLite]</category>
  <import>import sqlite</import>
  <make>sqlite.triggered_source($filename, $table_name, $vector_column_name, $sql_condition)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Filename</name>
    <key>filename</key>
    <type>file_save</type>
  </param>
  <param>
    <name>Table Name</name>
    <key>table_name</key>
    <type>string</type>
  </param>
  <param>
    <name>PDU Vector Column Name</name>
    <key>vector_column_name</key>
    <value>data</value>
    <type>string</type>
  </param>
  <param>
    <name>SQL Condition</name>
    <key>sql_condition</key>
    <type>string</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>trigger</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>pdu</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
